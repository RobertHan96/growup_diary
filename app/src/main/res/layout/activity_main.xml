<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/main_background_image"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mypageBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="14dp"
            android:layout_gravity="left"
            android:src="@drawable/mypage_icon"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorMainTitleTextGreen"
        android:shadowColor="@color/colorTitleBlack"
        android:shadowDx="7.0"
        android:shadowDy="7.0"
        android:shadowRadius="9.0"
        android:text="성장 다이어리"
        android:textSize="56dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/write_diary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:layout_marginBottom="14dp"
                android:text="기록 작성하기"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:background="@drawable/main_menu_button"
                android:textSize="24dp"
                />

            <Button
                android:id="@+id/grwonup_timeline_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:text="타임라인"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:background="@drawable/main_menu_button"
                android:textSize="24dp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>