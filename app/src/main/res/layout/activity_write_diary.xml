<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".WriteDiaryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorTitleBlack"
        android:text="제목" />

    <EditText
        android:id="@+id/titleEdt"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/boder"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorTitleBlack"
        android:text="내용" />

    <EditText
        android:id="@+id/contentEdt"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/boder"
        android:gravity="top"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorTitleBlack"
        android:layout_gravity="center_vertical"
        android:text="측정 결과" />

    <TextView
        android:id="@+id/measuredValueText"
        android:background="@drawable/boder"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:textColor="#000"
        android:text="cm" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <Button
            android:id="@+id/writePostBtn"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="작성"/>

        <Button
            android:id="@+id/getMeasureValuesBtn"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="측정하기"/>

        <Button
            android:id="@+id/openGalleryBtn"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="갤러리"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>