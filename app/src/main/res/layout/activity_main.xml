<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mypageBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/mypage_icon"/>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="8dp"
        android:text="성장 다이어리"
        android:textSize="32dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/find_bt_device_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:text="초음파 측정기 연결"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:background="@drawable/main_menu_button"
                android:textSize="24dp"
                />

            <Button
                android:id="@+id/write_diary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="기록 작성하기"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:background="@drawable/main_menu_button"
                android:textSize="24dp"
                />

            <Button
                android:id="@+id/grwonup_timeline_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:text="타임라인"
                android:textColor="@color/fbutton_color_midnight_blue"
                android:background="@drawable/main_menu_button"
                android:textSize="24dp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>